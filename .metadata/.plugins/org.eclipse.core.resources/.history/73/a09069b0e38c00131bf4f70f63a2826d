
/*
 * This class is used for the confirmation objects sent to clients
 * @author Mehrdad Dehdashti
 */
public class Confirmation
{
	private boolean bSuccess; //Whether the invoked operation was successful or not
	private String aMessage; // The message returned based on the success
	
	public Confirmation(boolean pSuccess, String pMessage)
	{
		bSuccess = pSuccess;
		aMessage = pMessage;
	}
	
	public boolean isSuccess()
	{
		return bSuccess;
	}
	
	public String getMesssage()
	{
		return aMessage;
	}
}
