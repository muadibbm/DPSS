
/*
 * This class is the confirmation object sent to clients
 * @author Mehrdad Dehdashti
 */
public class Confirmation
{
	private boolean bSuccess;
	private String aMessage;
	
	public Confirmation(boolean pSuccess, String pMessage)
	{
		bSuccess = pSuccess;
		aMessage = pMessage;
	}
	
	public boolean isSuccess()
	{
		return bSuccess;
	}
	
	public String getMesssage()
	{
		return aMessage;
	}
}
