package system;

/*
 * This is the final class that contains static parameters for the entire system
 * @author Mehrdad Dehdashti
 */
public final class Parameters 
{
	// Server Names
	public static String serverName_NA = "NA";
	public static String serverName_EU = "EU";
	public static String serverName_AS = "AS";
	// Server Log File Names
	public static String log_NA = "ServerData\\NA\\log_NA.txt";
	public static String log_EU = "ServerData\\EU\\log_EU.txt";
	public static String log_AS = "ServerData\\AS\\\|log_AS.txt";
	// Server Database File Names
	public static String database_NA = "ServerData\\NA\\database_NA.txt";
	public static String database_EU = "ServerData\\EU\\database_EU.txt";
	public static String database_AS = "ServerData\\AS\\database_AS.txt";
	// For validating IPAddress using regualr expressions
	public static final String PATTERN_FOR_IPADDRESS_VALIDATION = 
	        "^([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\." +
	        "([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\." +
	        "([01]?\\d\\d?|2[0-4]\\d|25[0-5])\\." +
	        "([01]?\\d\\d?|2[0-4]\\d|25[0-5])$";
	// Determines the First part of IP addresses to be able to connect to this server
	public static String GeoLocationOfGameServerNA = "132";
	public static String GeoLocationOfGameServerEU = "93";
	public static String GeoLocationOfGameServerAS = "182";
	// The UDP Ports
	public static int UDPportNA = 1000;
	public static int UDPportEU = 2000;
	public static int UDPportAS = 3000;
	public static int ONLINE = 1;
	public static int OFFLINE = 0;
}